{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ALFA",
  "patterns": [
    {
      "include": "#statement"
    }
  ],
  "repository": {
    "statement": {
      "patterns": [
        {
          "include": "#varDcl"
        },
        {
          "include": "#builtInAnimCall"
        }
      ]
    },
    "varDcl": {
      "patterns": [
        {
          "include": "#types"
        }
      ]
    },
    "types": {
      "match": "\\b(int|rect)\\b",
      "name": "keyword.type.alfa"
    }
  },
  "scopeName": "source.alfa"
}
