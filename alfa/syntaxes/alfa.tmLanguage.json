{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ALFA",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#animation"
    },
    {
      "include": "#statement"
    }
  ],
  "repository": {
    "comment": {
      "match": "#.*$",
      "name": "comment.line.double-slash.alfa"
    },
    "animation": {
      "match": "\\b(animation)\\b",
      "name": "keyword.control.alfa"
    },
    "paralBlock": {
      "begin": "paral ",
      "beginCaptures": {
        "0": {
          "name": "keyword.type.alfa"
        }
      },
      "end": "}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.block.end.alfa"
        }
      },
      "name": "meta.block.alfa",
      "patterns": [
        {
          "begin": "{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.block.begin.alfa"
            }
          },
          "patterns": [
            {
              "include": "#builtInAnimCall"
            },
            {
              "include": "#animIdentifier"
            },
            {
              "include": "#statement"
            }
          ],
          "end": ""
        }
      ]
    },

    "animIdentifier": {
      "match": "\\b[a-zA-Z_]\\w*\\(\\b",
      "name": "keyword.other.unit.alfa"
    },

    "block": {
      "begin": "{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.block.begin.alfa"
        }
      },
      "end": "}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.block.end.alfa"
        }
      },
      "name": "meta.block.alfa",
      "patterns": [
        {
          "include": "#statement"
        }
      ]
    },

    "statement": {
      "patterns": [
        {
          "include": "#animation"
        },
        {
          "include": "#paralBlock"
        },
        {
          "include": "#builtInAnimCall"
        },
        {
          "include": "#controlStructs"
        },
        {
          "include": "#varDcl"
        }
      ]
    },
    "varDcl": {
      "patterns": [
        {
          "include": "#type"
        },
        {
          "patterns": [
            {
              "include": "#assignment"
            },
            {
              "patterns": [
                {
                  "include": "#identifier"
                },
                {
                  "patterns": [
                    {
                      "include": "#builtInCreateShapeCall"
                    },
                    {
                      "include": "#num"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },

    "type": {
      "match": "\\b(int|rect|bool|true|false)\\b",
      "name": "keyword.type.alfa"
    },

    "identifier": {
      "match": "\\b[a-zA-Z_]\\w*\\b",
      "name": "variable.name.alfa"
    },

    "assignment": {
      "match": "=",
      "name": "keyword.control.alfa"
    },

    "controlStructs": {
      "match": "\\b(if|else|else if|loop)\\b",
      "name": "keyword.control.alfa"
    },

    "builtInCreateShapeCall": {
      "match": "\\s*\\s*\\b(createRect|createCircle)\\b",
      "name": "entity.name.function.alfa"
    },

    "num": {
      "match": "\\b(-?0(..)?|-?[1-9][0-9]*(..)?)\\b",
      "name": "constant.numeric.alfa"
    },

    "builtInAnimCall": {
      "match": "\\b(move|wait)\\b",
      "name": "entity.name.function"
    }
  },
  "scopeName": "source.alfa"
}
