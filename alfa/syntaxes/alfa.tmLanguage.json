{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ALFA",
  "patterns": [
    {
      "include": "#statement"
    }
  ],
  "repository": {
    "statement": {
      "patterns": [
        {
          "include": "#builtInAnimCall"
        },
        {
          "include": "#controlStructs"
        },
        {
          "include": "#varDcl"
        }
      ]
    },
    "varDcl": {
      "patterns": [
        {
          "include": "#type"
        },
        {
          "patterns": [
            {
              "include": "#assignment"
            },
            {
              "patterns": [
                {
                  "include": "#identifier"
                },
                {
                  "patterns": [
                    {
                      "include": "#builtInCreateShapeCall"
                    },
                    {
                      "include": "#num"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },

    "type": {
      "match": "\\b(int|rect|bool|true|false)\\b",
      "name": "keyword.type.alfa"
    },

    "identifier": {
      "match": "\\b[a-zA-Z_]\\w*\\b",
      "name": "variable.name.alfa"
    },

    "assignment": {
      "match": "=",
      "name": "keyword.control.alfa"
    },

    "controlStructs": {
      "match": "\\b(if|else|else if|loop|paral)\\b",
      "name": "keyword.control.alfa"
    },

    "builtInCreateShapeCall": {
      "match": "\\s*\\s*\\b(createRect|createCircle)\\b",
      "name": "entity.name.function.alfa"
    },

    "num": {
      "match": "\\b(-?0(..)?|-?[1-9][0-9]*(..)?)\\b",
      "name": "constant.numeric.alfa"
    },

    "builtInAnimCall": {
      "match": "\\b(move|wait)\\b",
      "name": "entity.name.function"
    }
  },
  "scopeName": "source.alfa"
}
